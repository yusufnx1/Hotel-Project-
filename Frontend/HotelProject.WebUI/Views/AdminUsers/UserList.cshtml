@model List<ResultAppUserListDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="active-member">
    <div class="table-responsive">
        <table class="table table-xs mb-0">
            <thead>
                <tr>
                    <th># Ad Soyad</th>
                    <th>Şehir</th>
                    <th>Ülke</th>
                    <th>Durum</th>
                    <th>Cinsiyet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""> @item.Name @item.Surname</td>
                        <td>@item.City</td>
                        <td>@item.Country</td>
                        @if (item.Gender == "Erkek")
                        {
                            <td>
                                <div class="progress" style="height:6px">
                                    <div class="progress-bar bg-success" style="width:50%"></div>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td>
                                <div class="progress" style="height:6px">
                                    <div class="progress-bar bg-warning" style="width:50%"></div>
                                </div>
                            </td>
                        }
                        @if (item.Gender == "Erkek")
                        {
                            <td><i class="fa fa-circle-o text-success  mr-2"></i>@item.Gender</td>
                        }
                        else
                        {
                            <td><i class="fa fa-circle-o text-warning  mr-2"></i>@item.Gender</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Register/Index" class="btn btn-primary">Yeni Kullanıcı Oluştur</a>
@model UpdateViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h3>Personel Güncelleme</h3>
<form class="form-group" method="post">
    <input type="hidden" asp-for="StaffId" />
    <label>Personel Adı</label>
    <input type="test" asp-for="Name" class="form-control" />
    <br />
    <label>Personel Ünvan</label>
    <input type="test" asp-for="Title" class="form-control" />
    <br />
    <label>Personel Instagram Link</label>
    <input type="test" asp-for="SocialMedia1" class="form-control" />
    <br />
    <label>Personel Facebook Link</label>
    <input type="test" asp-for="SocialMedia2" class="form-control" />
    <br />
    <label>Personel Twitter Link</label>
    <input type="test" asp-for="SocialMedia3" class="form-control" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

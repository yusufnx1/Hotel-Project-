@model List<InboxContactDto>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="email-left-box">
                <a href="/AdminContact/SendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                @await Html.PartialAsync("SidebarAdminContactPartial")
                <h5 class="mt-5 m-b-10">Kategoriler</h5>
                @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
            </div>
            <div class="email-right-box">
                <div role="toolbar" class="toolbar">
                    <div class="btn-group">
                        <button aria-expanded="false" class="btn btn-blue dropdown-toggle" type="button">
                            Gelen Mesajlar
                        </button>
                    </div>
                </div>
                <div class="email-list m-t-15">
                    @foreach (var item in Model)
                    {
                        <div class="message">
                            <a href="/AdminContact/MessageDetailsByInbox/@item.ContactId">
                                <div class="col-mail col-mail-1">
                                    <div class="email-checkbox">
                                        <input type="checkbox" id="chk2">
                                        <label class="toggle" for="chk2"></label>
                                    </div><span class="star-toggle ti-star"></span>
                                </div>
                                <div class="col-mail col-mail-2">
                                    <div class="subject">
                                       @item.Message
                                    </div>
                                    <div class="date">@item.Date.ToShortTimeString()</div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

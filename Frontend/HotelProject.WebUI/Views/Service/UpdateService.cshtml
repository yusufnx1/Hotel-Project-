@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h3>Hizmet Güncelleme</h3>
<form class="form-group" method="post">
    <input type="hidden" asp-for="ServiceId" />
    <label>Hizmet İkonu</label>
    <input type="test" asp-for="ServiceIcon" class="form-control" />
    <br />
    <label>Hizmet Başlığı</label>
    <input type="test" asp-for="Title" class="form-control" />
    <br />
    <label>Hizmet Açıklaması</label>
    <input type="test" asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>
